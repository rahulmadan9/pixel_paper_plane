{
  "name": "pixel-paper-plane",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A one-touch glide game featuring a pixel paper plane",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:pwa": "npm run build",
    "preview": "vite preview",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "cap:init": "npx cap init",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:build:android": "npm run build && npx cap sync && npx cap open android",
    "cap:build:ios": "npm run build && npx cap sync && npx cap open ios"
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/ios": "^7.0.0",
    "firebase": "^11.8.1",
    "howler": "^2.2.4",
    "phaser": "^3.90.0",
    "simplex-noise": "^4.0.3",
    "vite-plugin-pwa": "^0.20.5"
  }
}
